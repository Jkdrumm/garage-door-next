{
  "ts-node": {
    "compilerOptions": {
      "baseUrl": "./src",
      "module": "CommonJS",
      "typeRoots": ["./src/types"],
      "paths": {
        "*": ["*"]
      }
    }
  },
  "compilerOptions": {
    "target": "ES6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "./src",
    "removeComments": true,
    "outDir": "build"
  },
  "include": ["**/*.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "./*.test.ts", "./*.test.tsx", "build"]
}
